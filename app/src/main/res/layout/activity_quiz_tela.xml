<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05536D"
    android:orientation="vertical"
    tools:context=".QuizTela">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txtNumPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="QUESTÃO 1"
        android:textColor="#FBFDFC"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imgvPlaca"
        android:layout_width="167dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/retorno" />

    <TextView
        android:id="@+id/txtPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/baloo_2_medium"
        android:text="Qual é o significado dessa placa?"
        android:textColor="#FBFDFC"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btnPlaca1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="#C43B47"
        android:fontFamily="@font/baloo_2_medium"
        android:onClick="Escolha1"
        android:text="Button"
        android:textColor="#FBFDFC"
        android:textColorLink="#FBFDFC"
        android:textSize="18sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnPlaca2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#C43B47"
        android:fontFamily="@font/baloo_2_medium"
        android:onClick="Escolha2"
        android:text="Button"
        android:textColor="#FBFDFC"
        android:textColorLink="#FBFDFC"
        android:textSize="18sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnPlaca3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#C43B47"
        android:fontFamily="@font/baloo_2_medium"
        android:onClick="Escolha3"
        android:text="Button"
        android:textColor="#FBFDFC"
        android:textColorLink="#FBFDFC"
        android:textSize="18sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnPlaca4"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#C43B47"
        android:fontFamily="@font/baloo_2_medium"
        android:onClick="Escolha4"
        android:text="Button"
        android:textColor="#FBFDFC"
        android:textColorLink="#FBFDFC"
        android:textSize="18sp"
        app:cornerRadius="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btnSair2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EFC319"
        android:fontFamily="@font/baloo"
        android:onClick="Sair"
        android:text="SAIR"
        android:textColor="#393F4A"
        android:textColorLink="#FBFDFC"
        android:textSize="19sp"
        app:cornerRadius="10dp" />

</LinearLayout>
