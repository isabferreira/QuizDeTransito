<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#05536D"
    tools:context=".QuizResultado">

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/txtMotivacional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_2_medium"
        android:gravity="center"
        android:text="Não desista! Volte para tela inicial e tente novamente."
        android:textColor="#FBFDFC"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgvReacao"
        android:layout_width="272dp"
        android:layout_height="267dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/tentenovamente" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/baloo"
        android:text=" Seu resultado final é:"
        android:textColor="#FBFDFC"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/baloo"
        android:text="TextView"
        android:textColor="#FBFDFC"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:backgroundTint="#C43B47"
        android:fontFamily="@font/baloo"
        android:text="VOLTAR PARA TELA INICIAL"
        android:textColor="#FBFDFC"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

</LinearLayout>
